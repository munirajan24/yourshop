<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textViewStyle">@style/text</item>
    </style>

    <style name="text" parent="">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="txt_custom_input" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/ms_black</item>
        <item name="android:textSize">@dimen/font_body_size</item>
        <item name="android:textAlignment">viewStart</item>
        <!--        <item name="android:background">@drawable/border</item>-->
        <item name="android:backgroundTint">#fff</item>
        <item name="android:paddingBottom">@dimen/space_12</item>
        <item name="android:paddingTop">@dimen/space_12</item>
        <item name="android:paddingStart">@dimen/space_8</item>
        <item name="android:paddingEnd">@dimen/space_8</item>
        <item name="android:layout_marginTop">@dimen/space_5</item>
        <item name="android:layout_marginEnd">@dimen/space_5</item>
        <item name="android:layout_marginStart">@dimen/space_5</item>
        <item name="android:fontFamily">@font/cabin_regular</item>
        <item name="fontFamily">@font/cabin_regular</item>
    </style>

</resources>
